#certificates
	background-image: url(../img/certificates_back.png)
	background-position: top center
	background-repeat: no-repeat
	background-size cover
	width: 100%
	height: auto
	margin-top: -18px;
	padding: 90px 0 50px
	.certificates_wrapper
		width 95%
		margin 0 auto
		position relative
	.left
		position: absolute;
		top: 0;
		left: 0;
		float: none;
		padding-top 15px
	.right
		position: absolute;
		top: 0;
		right: 0;
		float: none;
		padding-top 15px
.middle
	width: 586px
	margin: 0 auto;
	float: none;
.middle_row
	&:first-child
		margin-bottom 20px
	a
		float left
.middle_link
	margin: 0 20px;
.popup_back
	display: none;
	position: fixed;
	background: rgba(0, 0, 0, 0.4);
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: 999999;
.popup_inner
	position: absolute;
	top: -135%;
	left: 0;
	right 0
	z-index: 5;
	margin: 0 auto;
	// width: 800px;
	min-width: 500px;
	max-width: 800px;
	padding: 40px;
	border: 1px solid #383838;
	background: #fff;
	-ms-box-shadow: 0 15px 20px rgba(0, 0, 0, .22), 0 19px 60px rgba(0, 0, 0, .3);
	box-shadow: 0 15px 20px rgba(0, 0, 0, .22), 0 19px 60px rgba(0, 0, 0, .3);
	-webkit-transition: -webkit-transform .6s ease-out;
	transition: transform .6s ease-out;
	img
		display block
		margin 0 auto
		height 80vh
.close
	top: 20px;
	right: 20px;
	width: 29px;
	height: 29px;
	position: absolute;
	padding: 0;
	background: url(../img/close.png) 50% no-repeat;
	cursor: pointer;