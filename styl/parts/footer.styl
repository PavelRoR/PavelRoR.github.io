#footer
	background-image: url(../img/footer_back.jpg)
	background-position: center
	background-repeat: no-repeat
	background-size cover
	width: 100%
	height: auto;
	padding 45px 0 75px
.footer_form
	width 825px
	margin 0 auto
	text-align center
	p
		background-color brown
		width 68%
		text-align center
		color #2f1731
		font-family 'BebasNeueBold', sans-serif
		font-size 30px
		padding: 23px 0;
		box-shadow 0 5px 0 #7a6134
		margin 25px auto 0
		text-transform uppercase
	#email
		border-radius: 10px;

		width: 40%;

		float: left;

		padding: 25px;

		border: 0;
	
	#submit
		background-color: #31c51d;

		border: 2px solid #fff;

		color: #000;

		padding: 15px;

		width: 40%;

		float: right;
		font-family 'BebasNeueBold', sans-serif
		font-size 33px
		cursor pointer